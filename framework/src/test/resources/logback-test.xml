<configuration scan="true">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%10relative [%-30.30thread] %-5level - %-36.36logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.ladderframework" level="DEBUG" />
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>